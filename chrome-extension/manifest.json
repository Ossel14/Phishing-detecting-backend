{
  "manifest_version": 3,
  "name": "Local Phishing Detector",
  "version": "1.0",
  "description": "Detect phishing URLs and emails using local ML models",

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_email.js"]
    }
  ]
}
